{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@layout/*": ["layout/*"],
      "@components/*": ["components/*"],
      "@ui/*": ["ui/*"],
      "@types/*": ["types/*"]
    },
    "module": "esnext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
